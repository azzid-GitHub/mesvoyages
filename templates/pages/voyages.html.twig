{% extends "basefront.html.twig" %}

{% block body %}
<h1> Page des voyages </h1>
    <table class="table table-striped">>
      <thead>
        <tr>
          <th class="text-left" scope="col">
                  Ville
                  <a href="{{ path('voyagesTri', {champs:'ville', order:'ASC'}) }}" class="btn button-primary btn-sm active" role="button"  aria-pressed="true"><</a>
                  <a href="{{ path('voyagesTri', {champs:'ville', order:'DESC'}) }}" class="btn button-primary btn-sm active" role="button" aria-pressed="true">></a>
          </th>
          <th scope="col">
              Pays
              <a href="{{ path('voyagesTri', {champs:'pays', order:'ASC'}) }}" class="btn button-primary btn-sm active" role="button"  aria-pressed="true"><</a>
              <a href="{{ path('voyagesTri', {champs:'pays', order:'DESC'}) }}" class="btn button-primary btn-sm active" role="button" aria-pressed="true">></a>
          </th>
          <th scope="col">
              Note
              <a href="{{ path('voyagesTri', {champs:'note', order:'ASC'}) }}" class="btn button-primary btn-sm active" role="button"  aria-pressed="true"><</a>
              <a href="{{ path('voyagesTri', {champs:'note', order:'DESC'}) }}" class="btn button-primary btn-sm active" role="button" aria-pressed="true">></a>
          </th>
          <th scope="col">
              Date
              <a href="{{ path('voyagesTri', {champs:'datecreation', order:'ASC'}) }}" class="btn button-primary btn-sm active" role="button"  aria-pressed="true"><</a>
              <a href="{{ path('voyagesTri', {champs:'datecreation', order:'DESC'}) }}" class="btn button-primary btn-sm active" role="button" aria-pressed="true">></a>
          </th>
        </tr>
      </thead>
      <tbody>
          {% for visite in visites %}
            <tr>
                <th scope="row">
                    <h5 class="text-primary">
                        <a href='#'>{{ visite.ville }}</a>
                    </h5>
                </th>
              <td>{{ visite.pays }}</td>
              <td>
                  <strong>
                      {% if visite.note<10 %}
                          <div class="text-danger">
                              {{ visite.note }}/20 
                          </div>
                      {% else %}
                          <div class="text-success">
                              {{ visite.note }}/20
                          </div>
                      {% endif %}
                  </strong></td>
              <td>{{ visite.getDatecreationString }}</td>
            </tr>
        {% endfor %}
      </tbody>
    </table>
{% endblock %}
